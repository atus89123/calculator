<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.totha.mycalculator.MainActivity"
    android:orientation="vertical"
    android:background="#444444"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/resultTextView"
        android:textSize="20sp"
        android:background="#99CCFF"
        android:gravity="bottom|right"
        android:scrollbars = "vertical"
        android:layout_weight="0.15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clear"
            android:text="@string/clear"
            android:layout_marginTop="25dp"
            android:onClick="onClick"
            android:theme="@style/MyOperatorButtonTheme"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:text="@string/delete"
            android:layout_marginTop="25dp"
            android:onClick="onClick"
            android:theme="@style/MyOperatorButtonTheme"
            android:textStyle="bold"/>
    </LinearLayout>



    <TableLayout
        android:id="@+id/buttonGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/seven"
                    android:id="@+id/seven"
                    android:onClick="onClick"
                    style="@style/MyNumberButtonTheme"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/eight"
                    android:id="@+id/eight"
                    android:onClick="onClick"
                    android:theme="@style/MyNumberButtonTheme"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/nine"
                    android:id="@+id/nine"
                    android:onClick="onClick"
                    android:theme="@style/MyNumberButtonTheme"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/divide"
                    android:id="@+id/divide"
                    android:onClick="onClick"
                    android:theme="@style/MyOperatorButtonTheme"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/four"
                android:id="@+id/four"
                android:onClick="onClick"
                android:theme="@style/MyNumberButtonTheme"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/five"
                android:id="@+id/five"
                android:onClick="onClick"
                android:theme="@style/MyNumberButtonTheme"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/six"
                android:id="@+id/six"
                android:onClick="onClick"
                android:theme="@style/MyNumberButtonTheme"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/multiply"
                android:id="@+id/multiply"
                android:onClick="onClick"
                android:theme="@style/MyOperatorButtonTheme"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/one"
                android:id="@+id/one"
                android:onClick="onClick"
                android:theme="@style/MyNumberButtonTheme"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/two"
                android:id="@+id/two"
                android:onClick="onClick"
                android:theme="@style/MyNumberButtonTheme"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/three"
                android:id="@+id/three"
                android:onClick="onClick"
                android:theme="@style/MyNumberButtonTheme"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/minus"
                android:id="@+id/minus"
                android:onClick="onClick"
                android:theme="@style/MyOperatorButtonTheme"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dot"
                android:id="@+id/dot"
                android:onClick="onClick"
                android:theme="@style/MyOperatorButtonTheme"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/zero"
                android:id="@+id/zero"
                android:onClick="onClick"
                android:theme="@style/MyNumberButtonTheme"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/equals"
                android:id="@+id/equals"
                android:onClick="onClick"
                android:theme="@style/MyOperatorButtonTheme"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/addition"
                android:id="@+id/addition"
                android:onClick="onClick"
                android:theme="@style/MyOperatorButtonTheme"/>
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/saveResult"
        android:onClick="saveResult"
        android:id="@+id/saveResult"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:theme="@style/MyOperatorButtonTheme"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/showResult"
        android:id="@+id/showResults"
        android:textSize="30sp"
        android:onClick="showResults"
        android:theme="@style/MyOperatorButtonTheme"
        android:textStyle="bold"/>


</LinearLayout>
